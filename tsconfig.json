{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/assets"
  ]
}
